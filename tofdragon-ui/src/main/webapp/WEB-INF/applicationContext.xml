<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<import resource="/classes/spring/beans/DataSource.xml"/>
	<import resource="/classes/spring/beans/HibernateSessionFactory.xml"/>
	
	<bean id="userService" class="com.tofdragon.application.ums.impl.UserServiceImpl">
	   <property name="userDao" ref="userDao"></property>
	</bean>
	
	<bean id="userDao" class="com.tofdragon.core.ums.dao.impl.UserDaoImpl">
	   <property name="dataSourceManager" ref="hibernateDataSourceManager"></property>
	</bean>
	
	<bean id="hibernateDataSourceManager" class="com.tofdragon.infrastructure.datasource.impl.HibernateDataSourceManager">
	    <property name="hibernateTemplate" ref="hibernateTemplate"></property>
	</bean>
	
	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate4.HibernateTemplate">
	      <property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	<!-- enable component scanning -->
	<!-- <context:component-scan base-package="com.tofdragon" />  -->

	<!-- enable autowire -->
    <!--  <context:annotation-config />-->
</beans>